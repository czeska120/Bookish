<html>
    <head>
        <%- include("partials/imports") -%>
        <title>Bookish</title>
    </head>
    <body>
        <div id="navbar">
            <h3>Bookish</h3>
        </div>
        <div class="parallax-container">
            <div class="background">
                <img src="/images/shelf.png" id="shelf1">
                <h1 style="font-weight: 700;">Bookish</h1>
                <img src="/images/shelf.png" id="shelf2">
            </div>
            
            <div class="foreground">
                <img src="/images/shelf.png" id="shelf3">
                <img src="/images/shelf.png" id="shelf4">
            </div>
        </div>
        
        <section class="content">
          
            <input type="search" class="searchbar" style=" border-radius: 25px; border:0px; height: 2rem; width:20rem;" id="search" placeholder="What are you looking for?">
            <!-- <div class="category">
              <h4 style="color: var(--sand);"> Top Hardcover Fiction Books this week</h4>

            </div> -->
            <div class="sec">
              
            <!-- <div class="sec " id="infiniteScroll--left"> -->
             <% bookData.forEach(function(book) { %>
                <article class="button" data-toggle="modal" data-target="#contentModal">
                  <div class="wrapper grow button">
                    <div class="img">
                      <img src= "<%= book.book_image %>"></img>
                    </div>
                    <div class="book-body">
                      <h5><%= book.title %></h4>
                      <p><%= book.author %></p>
                    </div>
                  </div>
                </article>
                  <!-- Modal -->
                  <div class="modal fade" id="contentModal" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel"><%= book.title %></h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <img src= "<%= book.book_image %>"></img>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                      </div>
                    </div>
                  </div>
                
              <% }) %>
              </div>



        </section>

        
    <script src="js/script.js"></script>
    </body>
</html>
